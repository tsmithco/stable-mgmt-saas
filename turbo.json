{
  "$schema": "https://turbo.build/json-schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "type-check": {
      "cache": true
    }
  }
}
